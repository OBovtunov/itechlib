pipeline {
          agent any
           options {
		timestamps ()
	    } 
	
	stages{
               stage('Create docker'){
			agent{
			    dockerfile{ filename './node/Dockerfile2'
	                        args '--name node -v exchange:/exchange  '
					  	
				    }
	            }
		   stage('Start NodeJS'){
                    			steps{
				                     sh '''
		 			              	   docker-compose up -d ''' 
			    	               }
      }
  }
}
		 
		   
